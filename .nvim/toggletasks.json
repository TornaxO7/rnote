{
    "tasks": [
        {
            "name": "build",
            "cwd": "${lsp_root}",
            "cmd": "meson compile -C build"
        },
        {
            "name": "install",
            "cwd": "${lsp_root}",
            "cmd": "sudo meson install -C build"
        },
        {
            "name": "run",
            "cwd": "${lsp_root}",
            "cmd": "meson compile -C build && meson install -C build && ./target/bin/rnote"
        }
    ]
}
